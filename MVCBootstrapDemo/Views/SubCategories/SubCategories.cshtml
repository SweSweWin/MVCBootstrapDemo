@model MVCBootstrapDemo.Models.SubCategoryModel

@{
    ViewBag.Title = "SubCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.SubCategories.Count > 0)
{
<table class="table table-responsive">
    <thead>
    <tr>
        <th>
            @Html.DisplayName("Main Category")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SortOrder)
        </th>
        <th>@Html.DisplayName("Action")</th>
    </tr>
    </thead>
<tbody>
@foreach (var item in Model.SubCategories) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SortOrder)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |           
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
          
            
        </td>
    </tr>
}
</tbody>
   
<tfoot>
    <tr>
        <td colspan="5">
            <ul class="pagination pull-right">
                @foreach (var item in Model.dlPager)
                {
                    <li class="@(Convert.ToInt32(item.Value) == Model.PageNumber ? "active" : "")">
                        <a href="~/SubCategories/SubCategories?Page=@item.Value">@item</a>
                    </li>
                }
             </ul>
        </td>
    </tr>
</tfoot>
    
</table>
}
else
{
    <text>There are no data to display!</text>
}
