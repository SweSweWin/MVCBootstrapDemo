@model MVCBootstrapDemo.Models.LoginModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm())
{   @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create New User</h4>
        <hr />      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(s => s.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">               
                @Html.TextBoxFor(s => s.Username, new { @placeholder = "Username", @class = "form-control" })
                @Html.ValidationMessageFor(s => s.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">               
                @Html.PasswordFor(s => s.Password, new { @placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(s=> s.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




