@model MVCBootstrapDemo.Models.LoginModel

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MVC Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {   @Html.AntiForgeryToken()
        @Html.HiddenFor(s => s.ReturnURL)


        <div class="container">
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
                    </div>
                    <div style="padding-top:30px" class="panel-body">
                        <form id="loginform" class="form-horizontal" role="form">

                            @if (TempData["ErrorMSG"] != null)
                            {
                                <label style="color:maroon;"> @TempData["ErrorMSG"] </label>

                            }

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.TextBoxFor(s => s.Username, new { @placeholder = "Username", @class = "form-control" })
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(s => s.Password, new { @placeholder = "Password", @class = "form-control" })
                            </div>


                            <div class="input-group">
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(s => s.isRemember) Remember ME
                                    </label>
                                </div>
                            </div>

                            <div style="margin-top:10px" class="form-group">
                                <div class="col-sm-12 controls">
                                    <button type="submit" class="btn btn-success">Login</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
   
</body>
</html>


